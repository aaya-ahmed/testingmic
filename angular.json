{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "ecommerce-storefront": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/ecommerce-storefront",
            "index": "src/index.html",
            "tsConfig": "tsconfig.app.json",
            "aot": true,
            "sourceMap": false,
            "optimization": true,
            "outputHashing": "all",
            "namedChunks": false,
            "serviceWorker": false,
            "buildOptimizer": true,
            "main": "src/main.ts",
            "styles": [
              "src/styles.scss"
            ],
            "scripts": [],
            "assets": ["src/favicon.ico", "src/assets"],
            "inlineStyleLanguage": "scss",
            "stylePreprocessorOptions": {
              "includePaths": [
                "."
              ]
            }
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kb",
                  "maximumError": "2mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb",
                  "maximumError": "29KB"
                }
              ],
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ],
              "outputHashing": "all",
              "optimization": true,
              "sourceMap": false,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "outputPath": "dist/ecomProdBuild/en"
            },
            "staging": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kb",
                  "maximumError": "2mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb",
                  "maximumError": "29KB"
                }
              ],
              "outputHashing": "all",
              "serviceWorker": false,
              "outputPath": "dist/ecomStagingBuild/en"
            },
            "testing": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kb",
                  "maximumError": "2mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb",
                  "maximumError": "29KB"
                }
              ],

              "outputHashing": "all",
              "serviceWorker": false,
              "outputPath": "dist/ecomTestingBuild/en"
            },
            "development": {
              "buildOptimizer": false,
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true,
              "outputPath": "dist/eCommerce-StoreFront/en"
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "buildTarget": "ecommerce-storefront:build:development",
            "port": 4200
          },
          "configurations": {
            "production": {
              "buildTarget": "ecommerce-storefront:build:production"
            },
            "ar": {
              "buildTarget": "ecommerce-storefront:build:ar"
            },
            "development": {
              "buildTarget": "ecommerce-storefront:build:development"
            },
            "staging": {
              "buildTarget": "ecommerce-storefront:build:staging"
            },
            "testing": {
              "buildTarget": "ecommerce-storefront:build:testing"
            }
          },
          "defaultConfiguration": "development"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/test.ts",
            "tsConfig": "tsconfig.spec.json",
            "karmaConfig": "karma.conf.js",
            "inlineStyleLanguage": "scss",
            "assets": ["src/favicon.ico", "src/assets"],
            "styles": ["src/styles.scss"],
            "scripts": [],
            "polyfills": [
              "@angular/localize/init"
            ]
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": ["src/**/*.ts", "src/**/*.html"]
          }
        }
      }
    }
  },
  "cli": {
    "analytics": "2161e528-416d-4a58-9a56-653f6ee19b69",
    "schematicCollections": ["@angular-eslint/schematics"]
  }
}


